            @Html.DisplayFor(modelItem => item.QuestionCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.FName)
        </td>
        <td style="color:#ffd633">
            @*@Html.ActionLink("Edit", "Edit", new { id=item.BeachVoiceId }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.BeachVoiceId }) 
